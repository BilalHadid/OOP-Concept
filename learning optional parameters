using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace LearingOptionalParameter
{
    class Mathematics
    {
        public void add(double a = 0, double b = 0, double c = 0, double d = 0)
        {
            Console.WriteLine("The sum is " + (a+b+c+d));
        }
    }
    class Program
    {
        static void Main(string[] args)
        {
            Mathematics obj = new Mathematics();
            obj.add();
        }
    }
}
